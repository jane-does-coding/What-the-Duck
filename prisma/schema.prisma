generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(auto()) @map("_id") @db.ObjectId
  name           String
  username       String
  email          String         @unique
  hashedPassword String
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  uploads        FileUpload[]   @relation("UserUploads")
}

model FileUpload {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId

  originalName String
  mimeType     String
  size         Int

  uploadType   UploadType
  filePath     String?      // optional for local disk / cloud

  jsonData     Json?        // <-- this is where parsed JSON is stored

  // Relations
  user         User         @relation("UserUploads", fields: [userId], references: [id])
  userId       String       @db.ObjectId

  createdAt    DateTime     @default(now())
}

enum UploadType {
  json
  pdf
  csv
  text
}
